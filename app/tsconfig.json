{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es5",
    "sourceMap": true,
    "lib": [
      "es6"
    ],
    "types": [
      "reflect-metadata"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "types": [
    "reflect-metadata"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "src/**/*.spec.ts"
  ]
}