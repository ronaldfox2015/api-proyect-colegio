{
  "name": "ts-express-ddd-seed",
  "description": "typeorm con typescript.",
  "version": "0.0.1",
  "author": "Ronald Cutisaca",
  "license": "MIT",
  "keywords": [
    "DDD",
    "Typescript",
    "Nodejs",
    "CQRS",
    "Typeorm"
  ],
  "repository": {
    "type": "git"
  },
  "main": "dist/src/app.js",
  "scripts": {
    "start": "npm run clean && concurrently \"npm run build:watch\"  \"wait-on -w 0 ./dist/src/app.js && nodemon dist/src/app.js\"",
    "build": "npm run clean; tsc",
    "build:watch": "npm run build -- -w",
    "clean": "rimraf dist",
    "debug": "npm run build && node --nolazy --inspect-brk=9229  dist/src/app.js",
    "dist": "npm run build; cp package.json dist/",
    "docs": "apidoc -i src -o apidoc",
    "lint": "tslint src/**/*.ts test/**/*.ts",
    "release": "npm run lint && npm run test:unit && npm run test:e2e && npm run dist",
    "test:unit": "NODE_ENV=unit-test mocha --opts ./mocha.unit.opts",
    "test:unit:watch": "NODE_ENV=unit-test npm run test:unit -- --watch",
    "test:unit:coverage": "NODE_ENV=unit-test istanbul cover --dir coverage-unit -e .ts _mocha -- --opts mocha.unit.opts",
    "test:e2e": "npm run build && NODE_ENV=test mocha --opts ./mocha.e2e.opts",
    "test": "npm run build && mocha -r ts-node/register test/e2e/*.spec.ts",
    "precommit": "npm run release",
    "postinstall": "npm run docs"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.6",
    "@types/helmet": "^0.0.45",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/pg": "^7.4.14",
    "body-parser": "1.18.2",
    "class-validator": "0.7.3",
    "compression": "1.7.1",
    "cookie-parser": "1.4.3",
    "express": "^4.16.2",
    "express-session": "1.15.6",
    "http-status-codes": "1.3.0",
    "inversify": "4.5.1",
    "inversify-express-utils": "4.1.0",
    "jsonwebtoken": "^8.5.1",
    "method-override": "^2.3.10",
    "morgan": "^1.9.1",
    "mysql": "^2.15.0",
    "reflect-metadata": "0.1.10",
    "typeorm": "0.1.21",
    "winston": "2.4.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/chai": "^4.2.6",
    "@types/es6-shim": "0.31.35",
    "@types/express": "4.0.39",
    "@types/mocha": "^5.2.7",
    "@types/sinon": "2.3.7",
    "@types/supertest": "2.0.3",
    "apidoc": "0.17.6",
    "chai": "^4.2.0",
    "coffeescript": "^2.4.1",
    "concurrently": "3.5.0",
    "core-js": "3.4.7",
    "istanbul": "1.1.0-alpha.1",
    "mocha": "^6.2.2",
    "nodemon": "^1.18.10",
    "nomnom": "1.8.1 ",
    "rimraf": "2.6.2",
    "sinon": "4.1.1",
    "supertest": "5.0.0-0",
    "ts-node": "^8.5.4",
    "tslint": "5.8.0",
    "typescript": "2.6.1",
    "wait-on": "3.3.0"
  },
  "engines": {
    "node": ">= 7.6.0"
  }
}
